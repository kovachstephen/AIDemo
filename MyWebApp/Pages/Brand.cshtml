@page "/brand"
@model BrandModel
<!DOCTYPE html>
<html> 
<head>
    <title>@Model.Brand?.Brand - Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">@Model.Brand?.Brand</h1>
        <div class="mb-3">
            <a href="/" class="btn btn-outline-primary">Back to Home</a>
            <a href="/whiskeys" class="btn btn-secondary">Whiskey Collection</a>
            <a href="/cocktails" class="btn btn-primary">View Cocktails</a>
        </div>
        @if (Model.Brand != null)
        {
            <div class="row mb-4">
                <div class="col-md-6">
                    <img src="@Model.Brand.Image" class="img-fluid rounded" alt="@Model.Brand.Brand">
                </div>
            </div>
            <table class="table table-striped mb-4">
                <tbody>
                    <tr><th>Distillery</th><td>@Model.Brand.Distillery</td></tr>
                    <tr><th>Location</th><td>@Model.Brand.Location</td></tr>
                    <tr><th>Founded</th><td>@Model.Brand.Founded</td></tr>
                    <tr><th>Description</th><td>@Model.Brand.Description</td></tr>
                </tbody>
            </table>
            <h3>Location</h3>
            <iframe src="@Model.Brand.MapUrl" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        }
        else
        {
            <p>Brand not found.</p>
        }
    </div>
</body>
</html>
