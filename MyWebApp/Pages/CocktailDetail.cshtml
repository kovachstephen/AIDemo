@page "/cocktail/{name}"
@model CocktailDetailModel
<!DOCTYPE html>
<html> 
<head>
    <title>@Model.Cocktail?.Name - Recipe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">@Model.Cocktail?.Name</h1>
        <div class="mb-3">
            <a href="/cocktails" class="btn btn-outline-primary">Back to Cocktails</a>
        </div>
        @if (Model.Cocktail != null)
        {
            <div class="row mb-4">
                <div class="col-md-6">
                    <img src="@Model.Cocktail.Image" class="img-fluid rounded" alt="@Model.Cocktail.Name">
                </div>
            </div>
            <h3>Ingredients</h3>
            <table class="table table-striped mb-4">
                <thead class="table-dark">
                    <tr><th>Name</th><th>Volume</th><th>Preferred Brand</th></tr>
                </thead>
                <tbody>
                    @foreach (var i in Model.Cocktail.Ingredients ?? new List<Ingredient>())
                    {
                        <tr><td>@i.Name</td><td>@i.Volume</td><td>@i.PreferredBrand</td></tr>
                    }
                </tbody>
            </table>
            <h3>Recipe</h3>
            <div class="card">
                <div class="card-body">
                    <p class="lead">@Model.Recipe</p>
                </div>
            </div>
        }
        else
        {
            <p>Cocktail not found.</p>
        }
    </div>
</body>
</html>
